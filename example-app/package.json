{
  "name": "ai-chat-app",
  "version": "1.0.0",
  "description": "Example AI chat application for testing with OpenAI emulator",
  "type": "module",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/cli.js",
    "test": "node --test tests/*.test.js",
    "test:integration": "npm run emulator:start && npm test && npm run emulator:stop",
    "emulator:start": "cd .. && ./openai-emulator &",
    "emulator:stop": "pkill openai-emulator || true"
  },
  "dependencies": {
    "openai": "^4.0.0",
    "readline": "^1.3.0",
    "chalk": "^5.3.0"
  },
  "devDependencies": {
    "node-fetch": "^3.3.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}